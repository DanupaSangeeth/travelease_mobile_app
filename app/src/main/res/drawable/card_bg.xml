<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Background color -->
    <solid android:color="#7D83F6" />

    <!-- Optional: Add a border -->
    <stroke
        android:width="1dp"
        android:color="#7D83F6" />

    <!-- Optional: Add a shadow (for newer Android versions) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>

</shape>